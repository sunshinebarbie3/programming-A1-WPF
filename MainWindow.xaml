<Window x:Class="ASSIGMENT_A1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASSIGMENT_A1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid Margin="0,0,0,74">

       
        
        <StackPanel Grid.Row="0" Margin="20" >
            <TextBlock TextWrapping="Wrap" Text="Claims System" FontWeight="Bold" FontSize="17" HorizontalAlignment="Center"/>
            
            <TextBlock TextWrapping="Wrap" Text="LECTURE:" FontWeight="SemiBold" FontSize="14"/>
            
            <TextBlock TextWrapping="Wrap" Text="LECTURE ID:"  />
            <TextBox TextWrapping="Wrap" Text="" Width="120"/>

            <TextBlock TextWrapping="Wrap" Text="Department:"  />
            <TextBox TextWrapping="Wrap" Text="" Width="120"/>

            <TextBlock TextWrapping="Wrap" Text="HOURS WORKED:"/>
            <TextBox TextWrapping="Wrap" Text="" Width="120"/>

            <TextBlock TextWrapping="Wrap" Text="RATE:"/>
            <TextBox TextWrapping="Wrap" Text="" Width="120"/>
            
            <TextBlock TextWrapping="Wrap" Text="ADDITIONAL CLAIMS:"/>
            <TextBox TextWrapping="Wrap" Text="" Width="130" Height="50" TextChanged="TextBox_TextChanged"/>
            
            <Button Content="submit Claim"/>


        </StackPanel>

       
    </Grid>
</Window>
